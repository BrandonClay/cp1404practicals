BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.3
        TextInput:
            id: input_miles
            #text: '1000'
            font_size: 80
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    #Button:
     #   size_hint_y: 0.3
     #   text: 'Convert miles to km'
     #   on_press: app.handle_calculate()

    Label:
        size_hint_y: 0.5
        id: output_label
        font_size: 120
